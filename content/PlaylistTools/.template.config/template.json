{
    "$schema": "http://json.schemastore.org/template",
    "author": "YourName",
    "classifications": [
        "Tool",
        "Powershell",
        "Multi-Project"
    ],
    "identity": "PlaylistTools.Template",
    "name": "Playlist Tools Multi-Project Template",
    "shortName": "playlisttools",
    "sourceName": "PlaylistTools",
    "preferNameDirectory": true,
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "symbols": {
        "name": {
            "type": "parameter",
            "replaces": "PlaylistTools",
            "description": "Project name"
        },
        "ProjectName": {
            "type": "parameter",
            "datatype": "string",
            "description": "The root name for the generated project.",
            "replaces": "PlaylistTools",
            "defaultValue": "PlaylistTools"
        }
    },
    "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*"
    ],
    "modifiers": [
        {
            "condition": "true",
            "rename": {
                "PlaylistTools.Cli": "{{ProjectName}}.Cli",
                "PlaylistTools.Core": "{{ProjectName}}.Core",
                "PlaylistTools.PowerShell": "{{ProjectName}}.PowerShell"
            }
        }
    ],
    "primaryOutputs": [
        {
            "path": "PlaylistTools.Cli/PlaylistTools.Cli.csproj"
        },
        {
            "path": "PlaylistTools.Core/PlaylistTools.Core.csproj"
        },
        {
            "path": "PlaylistTools.PowerShell/PlaylistTools.PowerShell.csproj"
        }
    ]
}